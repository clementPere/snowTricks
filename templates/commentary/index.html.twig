{% block body %}

<section style="background-color: #eee;">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card mb-3">
        <div class="card-header d-flex justify-content-between">
          <h4>Commentaires</h4>
          
            <a href="#postComment" class="btn btn-outline-primary">Ajouter un commentaire 
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/></svg>
            </a>
          
        </div>
          {% for commentary in commentaries %}
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <img class="rounded-circle shadow-1-strong me-3"
                  src="{{ commentary.user.urlImage }}" alt="avatar" width="60"
                  height="60" />
                <div>
                  <h6 class="fw-bold text-primary mb-1">{{ commentary.user.username }}</h6>
                  <p class="text-muted small mb-0">
                    Post√© le - {{ commentary.createdAt|date("d/m/Y") }}
                  </p>
                </div>
              </div>
              <p class="mt-3 mb-4 pb-2 contentCommentary">
                {{ commentary.content }}
              </p>
            </div>
          {% endfor %}
        {% if app.user %}
          <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
            <div class="d-flex flex-start w-100">
              <img class="rounded-circle shadow-1-strong me-3"
                src="{{ app.user.urlImage }}" alt="avatar" width="40"
                height="40" />
              <div class="form-outline w-100">
                <textarea class="form-control" id="postComment" rows="4"
                  style="background: #fff;" placeholder="Entrez votre message ici ..."></textarea>
              </div>
            </div>
             <a href="#getTrick" class="btn btn-outline-primary mt-2 pt-1">Remonter la page
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-up-circle" viewBox="0 0 16 16">  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-7.5 3.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V11.5z"/></svg>    
            </a>
            <div class="float-end mt-2 pt-1">
              <button type="button" class="btn btn-primary btn-sm">Ajouter ce commentaire</button>
              <button type="button" class="btn btn-outline-primary btn-sm">Annuler</button>
            </div>
          </div>
        </div>
        {% else %}
          <div class="flash-notice" id="postComment">
              <div class="alert alert-danger w-100 mb-0" role="alert">Vous devez <a href="{{ path('app_login') }}" class="link-secondary">vous connecter</a> pour ajouter un commentaire</div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>


<div class="pagination mt-3">
    {{ knp_pagination_render(commentaries) }}
  </div>
{% endblock %}