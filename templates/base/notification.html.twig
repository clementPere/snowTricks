{% block body %}
	{% for message in app.flashes('success') %}
		<div class="flash-notice">
			<div class="alert alert-success w-100 mb-0" role="alert">
				{{message}}
			</div>
		</div>
	{% endfor %}

	{% for message in app.flashes('danger') %}
		<div class="flash-notice">
			<div class="alert alert-danger w-100 mb-0" role="alert">
				{{message}}
			</div>
		</div>
	{% endfor %}

{% endblock %}
